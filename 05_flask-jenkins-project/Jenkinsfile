pipeline {
    agent { label 'flask-builder-node' }

    environment {
        IMAGE_NAME = "flask-ci-cd-demo"
        CONTAINER_NAME = "flask-app"
        PROJECT_DIR = "05_flask-jenkins-project"
        PYTHON = "/usr/bin/python3"
        PIP = "/home/devuser/.local/bin/pip3"
    }

    stages {
        stage('Clone Code') {
            steps {
                echo 'Code already cloned by Jenkins.'
                sh 'ls -l'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh '$PYTHON -m pip install -r $PROJECT_DIR/requirements.txt'
            }
        }

        stage('Run Unit Tests') {
            steps {
                sh '$PYTHON -m unittest discover $PROJECT_DIR/tests'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh "docker build -t $IMAGE_NAME $PROJECT_DIR"
            }
        }

        stage('Run App in Container') {
            steps {
                sh """
                docker rm -f $CONTAINER_NAME || true
                docker run -d --name $CONTAINER_NAME -p 5000:5000 $IMAGE_NAME
                """
            }
        }
    }

    post {
        always {
            echo 'âœ… Pipeline finished.'
        }
    }
}
