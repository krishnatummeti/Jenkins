pipeline {
    agent { label 'AGENT-01' }

    stages {
        stage('Install Dependencies') {
            steps {
                dir('05_node-js--app') {
                    sh 'npm install'
                }
            }
        }

        stage('Test') {
            steps {
                dir('05_node-js--app') {
                    sh 'npm test'
                }
            }
        }

        stage('Run App') {
            steps {
                dir('05_node-js--app') {
                    // Start the app and keep it alive
                    sh 'nohup node index.js > app.log 2>&1 &'
                    sh 'sleep 2 && tail -n 5 app.log'
                }
            }
        }
    }

    post {
        success {
            echo '🎉 Build completed successfully!'
        }
        failure {
            echo '❌ Build failed.'
        }
    }
}
