pipeline {
    agent { label 'AGENT-01' }

    stages {
        stage('Install Dependencies') {
            steps {
                dir('05_node-js--app') {
                    sh 'npm install'
                }
            }
        }

        stage('Run App') {
            steps {
                dir('05_node-js--app') {
                    sh '''
                        echo "🔁 Killing old app if running"
                        pkill -f "node index.js" || true

                        echo "🚀 Starting app in background"
                        nohup node index.js > app.log 2>&1 &
                        sleep 2
                        echo "📄 Last log lines:"
                        tail -n 5 app.log
                    '''
                }
            }
        }
    }

    post {
        success {
            echo '🎉 Node.js app is running in the background.'
        }
        failure {
            echo '❌ Build failed.'
        }
    }
}
