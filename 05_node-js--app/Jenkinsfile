pipeline {
    agent { label 'AGENT-01' }

    stages {
        stage('Install Dependencies') {
            steps {
                dir('05_node-js--app') {
                    sh 'npm install'
                }
            }
        }

        stage('Test') {
            steps {
                dir('05_node-js--app') {
                    sh 'npm test'
                }
            }
        }

        stage('Run App') {
            steps {
                dir('05_node-js--app') {
                    sh '''
                        echo "🔍 Node path: $(which node)"
                        echo "🔍 Current directory: $(pwd)"
                        pkill -f "node index.js" || true
                        nohup /usr/bin/node index.js > app.log 2>&1 &
                        sleep 3
                        tail -n 10 app.log
                    '''
                }
            }
        }
    }

    post {
        success {
            echo '🎉 Build completed successfully!'
        }
        failure {
            echo '❌ Build failed.'
        }
    }
}
