pipeline {
    agent { label 'AGENT-01' }

    stages {
        stage('Install Dependencies') {
            steps {
                // Go into the folder where the Node.js app is
                dir('05_node-js--app') {
                    // Install node modules from package.json
                    sh 'npm install'
                }
            }
        }

        stage('Test App') {
            steps {
                dir('05_node-js--app') {
                    // Run tests (even if it's just a dummy test)
                    sh 'npm test'
                }
            }
        }

        stage('Run App') {
            steps {
                dir('05_node-js--app') {
                    // Start the Node.js app in background
                    sh 'nohup node index.js > app.log 2>&1 &'
                    echo '✅ App is running in the background.'
                }
            }
        }
    }

    post {
        success {
            echo '🎉 Build Successful!'
        }
        failure {
            echo '❌ Build Failed.'
        }
    }
}
